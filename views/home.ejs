<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include custom CSS (optional) -->
    <style>
        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Contact Us</h2>
        <form action="/post-form" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="personname" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="tel" class="form-control" id="phone" name="pno" placeholder="Enter your phone number">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <% if (typeof userData !== 'undefined') { %>
                <br> <br> 
            <button type="button" class="btn btn-primary" onclick="show()">Show Data</button>
            <% } %>
        </form>
    </div>
    <script>
        function show() {
            document.getElementById("contact-list").style.display = "block";
        }
    </script>
    <% if (typeof userData !== 'undefined') { %>
    <div class="container mt-5" id="contact-list" style="display: none;">
        <h2>Contact List</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                <% userData.forEach(user => { %>
                    <tr>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.phone %></td>
                    </tr>
                <% }); %>
                
            </tbody>
        </table>
    </div>
    <% } %>
    <!-- Include Bootstrap JS and jQuery (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
